@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Welcome to Dr. Sillystringz's Factory</h1>


<h1>Engineers</h1>

@if (@ViewBag.EngineerList.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
} 

@foreach (Engineer engineer in @ViewBag.EngineerList)
{
  <li>@Html.ActionLink($"{engineer.Name}", "Details", "Engineer", new { id = engineer.EngineerId })</li>
}
<p>@Html.ActionLink("Engineer options", "Index", "Engineer")</p>

<h1>Machines</h1>

@if (@ViewBag.MachineList.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 

@foreach (Machine machine in @ViewBag.MachineList)
{
  <li>@Html.ActionLink($"{machine.Name}", "Details", "Machine", new { id = machine.MachineId })</li>
}
<p>@Html.ActionLink("Machine options", "Index", "Machine")</p>